<faf:PreferencePage x:Class="FastAppFramework.Demo.DemoSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:faf="clr-namespace:FastAppFramework.Wpf;assembly=FastAppFramework.Wpf"
    xmlns:local="clr-namespace:FastAppFramework.Demo"
    mc:Ignorable="d"
    IsDirty="{Binding IsDirty.Value}" HasErrors="{Binding HasErrors.Value}"
    ApplyCommand="{Binding CommitCommand}" RevertCommand="{Binding RollbackCommand}">
    <StackPanel Margin="12" Orientation="Vertical">
        <TextBox Style="{StaticResource MaterialDesignFilledTextBox}"
            md:HintAssist.Hint="Nonvolatile value"
            Text="{Binding Nonvolatile.Value, UpdateSourceTrigger=PropertyChanged}" />

        <TextBox Style="{StaticResource MaterialDesignFilledTextBox}"
            Margin="0 12 0 0"
            md:HintAssist.Hint="Volatile value"
            Text="{Binding Volatile.Value, UpdateSourceTrigger=PropertyChanged}" />
    </StackPanel>
</faf:PreferencePage>