<faf:NavigationPage x:Class="FastAppFramework.Demo.SamplePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:faf="clr-namespace:FastAppFramework.Wpf;assembly=FastAppFramework.Wpf"
    xmlns:local="clr-namespace:FastAppFramework.Demo"
    mc:Ignorable="d">
    <StackPanel Margin="16" Orientation="Vertical">
        <Button Margin="0 0 0 0" Content="Show Input Dialog" Command="{Binding ShowInputDialogCommand}" />
        <!--<Button Margin="0 16 0 0" Content="Show Login Dialog" Command="{Binding ShowLoginDialogCommand}" />-->
        <Button Margin="0 16 0 0" Content="Show Message Dialog" Command="{Binding ShowMessageDialogCommand}" />
        <Button Margin="0 16 0 0" Content="Show Progress Dialog" Command="{Binding ShowProgressDialogCommand}" />
    </StackPanel>
</faf:NavigationPage>