<faf:NavigationPage x:Class="FastAppFramework.Demo.Views.DialogPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:faf="clr-namespace:FastAppFramework.Wpf;assembly=FastAppFramework.Wpf"
    xmlns:demo="clr-namespace:FastAppFramework.Demo"
    xmlns:local="clr-namespace:FastAppFramework.Demo.Views"
    mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical" Margin="8 0">
            <!-- Input Dialog -->
            <StackPanel Orientation="Vertical" Margin="0 8 0 0">
                <Button Content="Show Input Dialog" Command="{Binding ShowInputDialogCommand}" />
            </StackPanel>

            <!-- Message Dialog -->
            <StackPanel Orientation="Vertical" Margin="0 8 0 0">
                <Button Content="Show Message Dialog" Command="{Binding ShowMessageDialogCommand}" />
            </StackPanel>

            <!-- Progress Dialog -->
            <StackPanel Orientation="Vertical" Margin="0 8 0 0">
                <Button Content="Show Progress Dialog" Command="{Binding ShowProgressDialogCommand}" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</faf:NavigationPage>