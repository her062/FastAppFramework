<faf:NavigationPage x:Class="FastAppFramework.Demo.Views.LicenseAgreementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:faf="clr-namespace:FastAppFramework.Wpf;assembly=FastAppFramework.Wpf"
    xmlns:demo="clr-namespace:FastAppFramework.Demo"
    xmlns:local="clr-namespace:FastAppFramework.Demo.Views"
    mc:Ignorable="d">
    <RichTextBox Style="{StaticResource MaterialDesignRichTextBox}"
        Padding="0"
        md:TextFieldAssist.TextBoxViewMargin="8"
        BorderThickness="0"
        IsReadOnly="True"
        VerticalScrollBarVisibility="Auto"
        demo:RichTextBoxHelper.Document="{Binding License, Mode=OneWay}" />
</faf:NavigationPage>