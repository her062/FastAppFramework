<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:local="clr-namespace:FastAppFramework.Wpf">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/FastAppFramework.Wpf;component/Themes/MetroDialogs.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="MahApps.Styles.Button.Dialogs" TargetType="{x:Type ButtonBase}" BasedOn="{StaticResource MetroDialogButtonStyle}" />
    <Style x:Key="MahApps.Styles.Button.Dialogs.Accent" TargetType="{x:Type ButtonBase}" BasedOn="{StaticResource MetroDialogAccentButtonStyle}" />
    <Style x:Key="MahApps.Styles.Button.Dialogs.AccentHighlight" TargetType="{x:Type ButtonBase}" BasedOn="{StaticResource MetroDialogAccentButtonStyle}" />
</ResourceDictionary>